@model IEnumerable<Academico.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Adicionar Departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instituicao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instituicao.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartamentoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DepartamentoID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartamentoID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
