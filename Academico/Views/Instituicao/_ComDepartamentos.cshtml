@model IEnumerable<Academico.Models.Departamento>

<div class="panel panel-primary">
	<div class="card-header text-white bg-warning text-center">
		<h5>Relação de departamentos registrados para a instituição</h5>
	</div>
	<div class="panel-body">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Nome)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Nome)
						</td>
						<td>
							<a asp-action="Details" asp-route-id="@item.DepartamentoID">Detalhes</a> |
							<a asp-action="Edit" asp-route-id="@item.DepartamentoID">Editar</a> |
							<a asp-action="Delete" asp-route-id="@item.DepartamentoID">Excluir</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="panel-footer panel-info"></div>
</div>
